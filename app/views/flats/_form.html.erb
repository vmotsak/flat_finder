<%= form_for(@flat) do |f| %>
    <% if @flat.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@flat.errors.count, "error") %> prohibited this flat from being saved:</h2>

            <ul>
                <% @flat.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :address %><br>
        <%= f.text_field :address %>
    </div>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, size: 40 %>
    </div>
    <div class="field">
        <%= f.label :desc %><br>
        <%= f.text_area :desc, cols: 100, rows: 20 %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    <div>
        <% @flat.images.each do |image| %>
            <%= image_tag image, width: 300 %>
        <% end %>
    </div>
<% end %>
